<h2>Cadastrar</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :nome, label: "Nome", required: true, autofocus: true %>
    <%= f.input :email, label: "Email", required: false  %>
    <%= f.input :password, label: "Senha" ,required: true  %>
    <%= f.input :password_confirmation, label: "Confirme a Senha",required: true %>
    <%= f.input :foneResidencial, label: "Telefone Residencial" %>
    <%= f.input :foneCelular, label: "Telefone Celular", required: true %>
    <%= f.input :Endereco, label: "EndereÃ§o" %>
    <%= f.input :cpf, label: "CPF"%>
    <%= f.input :bairro, label: "Bairro"%>
    <%= f.input :estado, label: "Estado"%>
    <%= f.input :cidade, label: "Cidade"%>
    <%= f.input :cep, label: "CEP"%>
    <%= f.input :DataNascimento, label: "DataNascimento"%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Registrar" %>
  </div>
<% end %>

